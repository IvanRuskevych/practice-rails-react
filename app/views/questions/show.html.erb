<div class="container">
  <p><%= Time.now %></p>

  <p><%= link_to "All questions", questions_path %></p>

  <h2>Question ID: <%= @question.id %></h2>
  <p><%= @question.body %></p>
  <p>User ID <%= @question.user_id %></p>
  <p><%= link_to "Edit question", edit_question_path(@question) %></p>
  <p><%= button_to "Delete question", question_path(@question), method: :delete %></p>
</div>